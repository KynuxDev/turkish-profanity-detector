# API Ayarları
PORT=3000

# MongoDB Veritabanı Bağlantısı
MONGODB_URI=mongodb+srv://your_username:your_password@cluster0.example.mongodb.net/swear_detection?retryWrites=true&w=majority

# JWT Ayarları (Admin panel için)
JWT_SECRET=your_secret_jwt_key

# Yapay Zeka API Ayarları
API_KEY=your_ai_api_key
AI_API_BASE_URL=https://api.claude.gg/v1

# Uygulama Ayarları
NODE_ENV=development # veya production
LOG_LEVEL=info # debug, info, warn, error

# Güvenlik Ayarları
CORS_ORIGIN=* # veya belirli bir URL
RATE_LIMIT_WINDOW_MS=900000 # 15 dakika
RATE_LIMIT_MAX=100 # IP başına maksimum istek sayısı
